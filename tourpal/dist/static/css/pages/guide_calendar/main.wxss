@import "/static/css/vendor.wxss";

.wh_container {
  max-width: 820rpx;
  margin: auto;
}
._li {
  list-style-type: none;
}
.wh_content_all {
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', STHeiti, 'Microsoft Yahei', Tahoma,
  Simsun, sans-serif;
  background-color: #42b970;
  width: 100%;
  overflow: hidden;
  padding-bottom: 16rpx;
}
.wh_content {
  display: flex;
  flex-wrap: wrap;
  padding: 0 3% 0 3%;
  width: 100%;
}
.wh_content:first-child .wh_content_item {
  color: #ddd;
  font-size: 32rpx;
  height: 15%;
  line-height: 15%;
}
.wh_content_item {
  font-size: 30rpx;
  width: 13.4%;
  padding-bottom: 10.14%;
  text-align: center;
  color: #fff;
  position: relative;
}
.wh_content_item ._div {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wh_content_item ._li {
  width: 74rpx;
  height: 74rpx;
  border-radius: 200rpx;
  line-height: 74rpx;
}
@media screen and (min-width: 460px) {
.wh_content_item ._li:hover {
    background: #42b970;
    cursor: pointer;
}
}
.wh_top_changge {
  display: flex;
}
.wh_top_changge ._li {
  cursor: pointer;
  display: flex;
  color: #fff;
  font-size: 36rpx;
  flex: 1;
  justify-content: center;
  align-items: center;
  height: 94rpx;
}
.wh_top_changge .wh_content_li {
  cursor: auto;
  flex: 2.5;
}
.wh_jiantou1 {
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid #ffffff;
  border-left: 4rpx solid #ffffff;
  transform: rotate(-45deg);
}
.wh_jiantou1:active,
.wh_jiantou2:active {
  border-color: #ddd;
}
.wh_content_item ._div .wh_isToday {
  margin: auto;
  background-color: #fff;
  color: #42b970;
  border-radius: 200rpx;
  text-align: center;
}
.wh_jiantou2 {
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid #ffffff;
  border-right: 4rpx solid #ffffff;
  transform: rotate(45deg);
}
.wh_content_item ._div .wh_isMark {
  margin: auto;
  border-radius: 200rpx;
  border: 2rpx solid white;
  z-index: 2;
}
.wh_content_item ._div .wh_nextDayShow {
  color: #bfbfbf;
}
