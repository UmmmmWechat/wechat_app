<template name="SpotCard$66151f43">
  <view id="wrapper" class="_div data-v-12598dab d-card">
    <view id="img-wrapper" class="_div data-v-12598dab">
      <image id="image" src="{{spot.pictureUrl}}" alt="景点图片加载失败" class="_img data-v-12598dab"></image>
    </view>
    <view class="_div data-v-12598dab text-wrapper">
      <view id="title-div" class="_div data-v-12598dab">
        {{ spot.name }}
      </view>
      <view id="content-div" class="_div data-v-12598dab">
        {{ spot.introduction }}
      </view>
    </view>
    <view class="_div data-v-12598dab text-wrapper">
      <view class="_div data-v-12598dab text-item-wrapper"><label class="_span data-v-12598dab title-span">热度：</label> <label class="_span data-v-12598dab">{{ spot.popularity }}</label></view>
      <view class="_div data-v-12598dab text-item-wrapper"><label class="_span data-v-12598dab title-span">推荐指数：</label> <label class="_span data-v-12598dab">{{ computedLevel }}</label></view>
    </view>
    <view wx:if="{{!noAction}}" id="btn-wrapper" class="_div data-v-12598dab">
      <view class="_a data-v-12598dab d-a" bindtap="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}"> 感兴趣 </view>
    </view>
  </view>
</template>